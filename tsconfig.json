{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./modules/*"],
      "@shared/*": ["./shared/*"],
      "@utils/*": ["./utils/*"],
      "@config/*": ["./config/*"]
    }
  },
  "include": ["src/**/*"]
}
